<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tanker.capitalwatersupplycustomer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:exported="true"
        android:icon="@drawable/splash_tanker"
        android:label="@string/app_name"
        android:roundIcon="@drawable/splash_tanker"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.tanker.capitalwatersupplycustomer.activities.OtpActivity"
            android:exported="false" />
        <activity
            android:name="com.tanker.capitalwatersupplycustomer.activities.PhoneNumberActivity"
            android:exported="false" />
        <activity android:name="com.tanker.capitalwatersupplycustomer.AboutUsActivity" />
        <activity android:name="com.tanker.capitalwatersupplycustomer.activities.OrdersActivity" />
        <activity android:name="com.tanker.capitalwatersupplycustomer.activities.OrderFormActivity" />
        <activity android:name="com.tanker.capitalwatersupplycustomer.activities.ForgotPasswordActivity" />
        <activity android:name="com.tanker.capitalwatersupplycustomer.activities.SignInActivity" />
        <activity android:name="com.tanker.capitalwatersupplycustomer.activities.SignUpActivity" />
        <activity android:exported="true"
            android:name="com.tanker.capitalwatersupplycustomer.activities.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.tanker.capitalwatersupplycustomer.activities.MainActivity" />
    </application>

</manifest>